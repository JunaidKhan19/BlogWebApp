@model Post

@{
	ViewData["Title"] = Model.Title;
}

<style>
	.content-wrapper {
		padding: 20px;
		max-width: 100%;
		margin: 0 auto;
		font-family: 'Sans Serif';
	}

	.feature-image {
		width: 100%;
		height: 500px;
		object-fit: cover;
		margin-bottom: 20px; 
	}
</style>

<div class="text-end">
	<a class="btn btn-secondary my-3" asp-action="Edit" asp-controller="Post" asp-route-id="@Model.Id">Edit Post</a>
	<a class="btn btn-danger mx-3 my-3">Delete Post</a>
</div>

<div class="content-wrapper">
	<h1>@Model.Title</h1>
	<p>
		<span class="badge bg-primary">By:</span> @Model.Author | <span class="badge bg-primary">Published on</span> @Model.PublishedDate.ToString("MMM dd, yyyy")
	</p>
	<p><span class="badge bg-secondary">Category</span> @Model.Category.Name</p>
	
	<img src="@Model.FeatureImagePath" alt="@Model.Title" class="feature-image"/>

	<hr />

	<div>@Html.Raw(Model.Content)</div>

	<hr />

	@if (Model.Comments.Any())
	{
		<div id="commentSection">
			@foreach(var comment in Model.Comments)
			{
				<div class="card mb-3 shadow-sm">
					<div class="card-body">
						<h5 class="card-title">@comment.UserName</h5>
						<p class="card-text text-muted">@comment.CommentDate.ToString("MMMM dd, yyyy")</p>
						<p class="card-text">@comment.CommentContent</p>
					</div>
				</div>
			}
		</div>
	}
	else
	{
		<p class="text-muted">No comments yet. Be the first to comment</p>
	}

	<h4>Add a comment</h4>
	<form id="commentForm">
		<div class="form-group">
			<label for="Username">Name</label>
			<input for="Username" type="text" class="form-control" id="Username" name="Username" required placeholder="Enter your name" />
		</div>
		<div class="form-group">
			<label for="Content">Content</label>
			<textarea for="Content" id="Content" name="Content" rows="3" required class="form-control"></textarea>
		</div>

		<button type="submit" class="btn btn-primary mt-2 p-2 rounded">Submit Comment</button>
	</form>
</div>

@section Scripts {
	<script>
		$(document).ready(function (){
			$("#commentForm").on('submit', function(event){
				event.preventDefault();
				var userName = $("#Username").val();
				var commentContent = $("#Content").val();
				var postId = @Model.Id;
				var formData = {
					PostId: postId,
					UserName: userName,
					CommentContent: commentContent,
				};
				$.ajax({
					type: "POST",
					url: "@Url.Action("AddComment", "Post")", //helper fetches the url and append AddComment and Post in it
					data: JSON.stringify(formData),
					contentType: "application/json; charset=utf-8",
					dataType: "json",
					success: function(response){
						$('#commentForm')[0].reset();
						$("#commentSection").append(
							`
							<div class="card mb-3 shadow-sm">
								<div class="card-body">
									<h5 class="card-title">${response.username}</h5>
									<p class="card-text text-muted">${response.commentDate}</p>
									<p class="card-text">${response.commentContent}</p>
								</div>
							</div>
							`
						)
					},
					error: function(err){
						alert("Error adding comment. Please try again.");
					}
				});
			})
		})
	</script>
}